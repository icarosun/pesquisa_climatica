<div class="acesso-container">

  <h1>Informe seu código de acesso</h1>
  <p>Digite o código fornecido para continuar.</p>

  <%= form_with url: "/validar-codigo",
        method: :post,
        local: true,
        data: { turbo: false },
        html: { class: "acesso-form" } do %>

    <div class="campo">
      <%= label_tag :codigo, "Código de acesso" %>
      <%= text_field_tag :codigo, nil, required: true %>
    </div>

    <%= submit_tag "Continuar" %>
  <% end %>

</div>


<div class="acesso-container">

  <h1>Login Admin</h1>

  <%= form_with url: login_path,
        method: :post,
        local: true,
        html: { class: "acesso-form" } do %>

    <div class="campo">
      <label>Login</label>
      <%= text_field_tag :login, nil, required: true %>
    </div>

    <div class="campo">
      <label>Senha</label>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <%= submit_tag "Entrar" %>
  <% end %>

</div>

